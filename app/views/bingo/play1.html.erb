<!DOCTYPE html>
<html lang="ja">
<head>
  <%= javascript_tag do %>
    document.addEventListener('turbo:load', function() {
      Turbo.session.drive = false;
    });
  <% end %>
  <meta charset="UTF-8">
  <title>ビンゴ</title>
  <%= stylesheet_link_tag 'bingo_ruret', :media => "all" %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <% content_for :js do %>
    <%= javascript_import_module_tag "bingo_ruret1" %>
  <% end %>
  
</head>
<body>

  <div class="container">
    <div class="row size">
      <!-- ビンゴカード -->
      <div class=" col-12 col-md-9 center right-contents">
        <div class="bingo-heading">
            <h2>スタートボタンを押してね</h2>
        </div>
        <div class="card">
            <div class="outer"  id="outer">
            </div>
        </div>
      </div>
      <!-- ルーレット -->
      <div class="roulette col-12 col-md-3">
        <div class="row roulette-size">
          <div class="col-6 col-md-12 center">
            <div class="ruret_text">
                <h2>?</h2>
            </div>
            <div class="square2">
            <img id="result" class="result " src=<%= asset_path('question101.png') %> alt="result image">
            </div>
          </div>
          <div class="col-6 col-md-12 center">
              <button id="button" class="button">START</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script> //javascriptにデータを渡す。
      mass = <%= raw @mass.to_json %>;
      images = <%= raw @pictures.to_json %>;
      names = <%= raw @names.to_json %>;
      //const imagePath = "<%= asset_path('animal/1.png') %>";
      imagePaths = <%= raw @image_paths.map { |path| "#{path}" }.to_json %>;
      imagePathsArray = <%= raw @image_paths.map { |path| asset_path("#{path}") }.to_json %>;
  </script>
</body>
</html>