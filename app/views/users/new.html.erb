<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title></title>
    <%= stylesheet_link_tag 'user_session', :media => "all" %>
</head>
<body>
<div class="container row2">
      <h1>ユーザー登録</h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label "名前" %>
          <%= f.text_field :name, class: 'form-control', size: "50" %>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード確認" %>
          <%= f.password_field :password_confirmation, class: 'form-control'  %>
        </div>
        <%= f.submit '登録', class: 'btn btn-primary' %>
      <% end %>
      <div class="sns-login" >
        <%= link_to 'Googleでログイン', auth_at_provider_path(provider: :google), class: "btn_google" %>
        <%= link_to 'LINEでログイン', auth_at_provider_path(provider: :line), class: "btn_google" %>
      </div>
      <%= link_to 'ゲストログイン', guest_login_path, class: "btn_google", data: { "turbo-method": :post } %>
      <div class='text-center'>
        <%= link_to 'ログインページへ', login_path %>
      </div>
</div>
</body>
</html>